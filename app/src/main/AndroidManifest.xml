<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kontakt.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="it.unipi.sample.App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="it.unipi.sample.samples.KontaktCloudWithCoroutinesActivity"></activity>
        <activity android:name="it.unipi.sample.samples.android_8_screen_pause.AndroidAbove8ScanWithPausedScreen" />
        <activity android:name="it.unipi.sample.samples.beam.PortalBeamImageActivity" /> <!-- Activities -->
        <activity
            android:name="it.unipi.sample.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.unipi.sample.samples.BeaconEddystoneScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.BeaconProScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.ScanRegionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.ScanFiltersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.BackgroundScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.BeaconConfigurationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.BeaconProSensorsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.KontaktCloudActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="it.unipi.sample.samples.ForegroundScanActivity"
            android:screenOrientation="portrait" /> <!-- Services -->
        <service
            android:name="com.kontakt.sdk.android.ble.service.ProximityService"
            android:exported="false" />
        <service
            android:name="it.unipi.sample.service.BackgroundScanService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="it.unipi.sample.service.ForegroundScanService"
            android:exported="false" />
        <service
            android:name="it.unipi.sample.samples.android_8_screen_pause.ShowNotificationService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="it.unipi.sample.service.MainService"
            android:exported="false" />
    </application>

</manifest>